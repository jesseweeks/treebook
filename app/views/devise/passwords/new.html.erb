<div class="row">
	<%= devise_error_messages! %>
	<div class="span4">

			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html:{class: "well"}) do |f| %>

			  <fieldset>
				<legend>Forgot your password?</legend>

			  <%= f.input :email %>

			  <%= f.button :submit, "Send me reset password instructions"%>
			<% end %>
				</fieldset>
		<%= render "devise/shared/links" %>
	</div>
</div>


