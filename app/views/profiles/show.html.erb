<div class = "page-header">
	<div class="row">
		<div class="span1">
			<%= image_tag @user.gravatar_url %>
		</div>
		<div class="span7">
			<h1><%= @user.full_name %></h1>
		</div>
	</div>
</div>

<div class="statuses">
	<div class="row">
		<div class="span7">
			<% if @statuses %>
				<% @statuses.each do |status| %>
					<div class = "well">
						<%= status.content %>
						<hr />
						<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>