<div class = "page-header">
	<div class="row">
		<div class="span1">
			<%= image_tag @user.gravatar_url %>
		</div>
		<div class="span6">
			<h1><%= @user.full_name %></h1>
			<i><%= link_to "(edit my profile info)", edit_user_registration_path %></i>
		</div>
	</div>
</div>

<div class="instructions">
	<p>Customize your profile: </br> If you would like to have your own avatar, create a gravatar via www.gravatar.com and use the same email address you used to sign up here! </p>
</div>

<div class="statuses">
	<h3>My Statuses</h3>
	<div class="row">
		<div class="span7">
			<% if @statuses %>
				<% @statuses.each do |status| %>
					<div class = "well">
						<%= status.content %>
						<hr />
						<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>